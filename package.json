{
	"name": "rss-service",
	"version": "0.0.1",
	"description": "Microservice for providing RSS feeds",
	"repository": {
		"type": "git",
		"url": "https://github.com/religiosa1/rss-service"
	},
	"keywords": ["rss"],
	"license": "MIT",
	"author": "Viacheslav Azarov <public@religiosa.ru>",
	"type": "module",
	"main": "index.ts",
	"scripts": {
		"start": "NODE_ENV=production node --env-file-if-exists .env ./index.ts",
		"dev": "node --watch ./index.ts",
		"test": "NODE_ENV=test node --test **/*.test.{js,ts}",
		"test:update-snapshots": "NODE_ENV=test node --test-update-snapshots --test **/*.test.{js,ts}",
		"check": "biome check",
		"type-check": "tsc --noEmit",
		"make-migration": "drizzle-kit generate",
		"generate-openapi-specs": "node ./scripts/generateOpenApiSpecs.ts"
	},
	"dependencies": {
		"@hono/node-server": "^1.18.1",
		"@hono/prometheus": "^1.0.2",
		"@hono/zod-validator": "^0.4.3",
		"@libsql/client": "^0.15.10",
		"@scalar/hono-api-reference": "^0.9.13",
		"drizzle-kit": "^0.31.4",
		"drizzle-orm": "^0.44.4",
		"feed": "^5.1.0",
		"hono": "^4.9.0",
		"hono-openapi": "^0.4.8",
		"hono-pino": "^0.10.2",
		"pino": "^9.9.0",
		"prom-client": "^15.1.3",
		"ts-dedent": "^2.2.0",
		"ts-pattern": "^5.8.0",
		"zod": "^3.25.76",
		"zod-openapi": "^4.2.4"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.0",
		"@types/node": "^24.2.1",
		"typescript": "^5.9.2"
	}
}
