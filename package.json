{
	"name": "rss-service",
	"version": "0.1.0",
	"description": "Microservice for providing RSS feeds",
	"repository": {
		"type": "git",
		"url": "https://github.com/religiosa1/rss-service"
	},
	"keywords": [
		"rss"
	],
	"license": "MIT",
	"author": "Viacheslav Azarov <public@religiosa.ru>",
	"type": "module",
	"main": "index.ts",
	"scripts": {
		"start": "NODE_ENV=production node --env-file-if-exists .env ./index.ts",
		"dev": "node --watch ./index.ts",
		"test": "NODE_ENV=test node --test **/*.test.{js,ts}",
		"test:update-snapshots": "NODE_ENV=test node --test-update-snapshots --test **/*.test.{js,ts}",
		"check": "biome check",
		"type-check": "tsc --noEmit",
		"make-migration": "drizzle-kit generate",
		"generate-openapi-specs": "node ./scripts/generateOpenApiSpecs.ts"
	},
	"dependencies": {
		"@hono/node-server": "^1.19.5",
		"@hono/prometheus": "^1.0.2",
		"@hono/standard-validator": "^0.1.5",
		"@libsql/client": "^0.15.15",
		"@scalar/hono-api-reference": "^0.9.22",
		"@standard-schema/spec": "^1.0.0",
		"drizzle-kit": "^0.31.5",
		"drizzle-orm": "^0.44.6",
		"feed": "^5.1.0",
		"hono": "^4.10.1",
		"hono-openapi": "^1.1.0",
		"hono-pino": "^0.10.3",
		"pino": "^9.14.0",
		"pino-opentelemetry-transport": "^1.1.0",
		"prom-client": "^15.1.3",
		"ts-dedent": "^2.2.0",
		"ts-pattern": "^5.8.0",
		"zod": "^4.1.12"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.6",
		"@types/node": "^24.9.1",
		"typescript": "^5.9.3"
	}
}
